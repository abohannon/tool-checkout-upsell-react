{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "moduleResolution": "node"
  },
  "allowSyntheticDefaultImports": true,
  "include": [
      "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}